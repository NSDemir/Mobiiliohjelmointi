<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/amountOfVisitors"
        android:layout_width="277dp"
        android:layout_height="53dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:text="@string/AmountVisitor"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="149dp"
        android:layout_height="108dp"
        android:text="@string/resetButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountOfVisitors"
        app:layout_constraintVertical_bias="0.688" />

    <Button
        android:id="@+id/AddButton"
        android:layout_width="183dp"
        android:layout_height="71dp"
        android:text="@string/AddButton"
        app:layout_constraintBottom_toTopOf="@+id/amountOfVisitors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DecButton"
        android:layout_width="185dp"
        android:layout_height="73dp"
        android:text="@string/DecButton"
        app:layout_constraintBottom_toTopOf="@+id/amountOfVisitors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/VisAmount"
        style="@style/textStyle"
        android:layout_width="68dp"
        android:layout_height="78dp"
        android:text="@string/VisitorNumber"
        app:layout_constraintBottom_toTopOf="@+id/resetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VisAmount"
        app:layout_constraintVertical_bias="0.723" />

</androidx.constraintlayout.widget.ConstraintLayout>